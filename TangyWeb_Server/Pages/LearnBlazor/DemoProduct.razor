@page "/LearnBlazor/DemoProduct"

<h2 class="text-primary">Demo Product</h2>
<br />
Favourite Count : @Counter <br/>

Selected Product :@SelectedProduct
<div class="border p-2 mt-2" style="background-color:azure">
    <div class="row">

        @foreach (var product in products)
        {

            <_IndividualProductComponent Product="product" OnFavouriteSelection="FavouriteCountUpdate" SelectedProduct="SelectedProductUpdate">
       

            </_IndividualProductComponent>

        }

    </div>
</div>



@code {

    List<Demo_Product> products = new();

    private int Counter { get; set; } = 0;

    private string SelectedProduct { get; set; }

    protected override void OnInitialized()
    {
        products.Add(new()
            {
                Id = 1,
                Name = "Midnight Blaze",
                IsActive = false,
                ProductProperties = new()
                {
                    new Demo_ProductProp { Id = 1, Key = "Flavor", Value = "Rose" },
                    new Demo_ProductProp { Id = 2, Key = "Size", Value = "20oz" },
                    new Demo_ProductProp { Id = 3, Key = "Color", Value = "Purple" }
                },
                Price = 12321
            });

        products.Add(new()
            {
                Id = 2,
                Name = "Blossom Lily",
                IsActive = true,
                ProductProperties = new()
                {
                    new Demo_ProductProp { Id = 1, Key = "Flavor", Value = "Lily" },
                    new Demo_ProductProp { Id = 2, Key = "Size", Value = "18oz" },
                    new Demo_ProductProp { Id = 3, Key = "Color", Value = "White" }
                },
                Price = 12321
            });
    }


    protected void FavouriteCountUpdate(bool IsSelected)
    {
        if (IsSelected)
        {
            Counter++;
        }
        else
        {
            Counter--;
        }
    }

    protected void SelectedProductUpdate(string product)
    {
        SelectedProduct = product;
    }

}
